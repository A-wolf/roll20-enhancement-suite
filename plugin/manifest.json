{

  "manifest_version": 2,
  "name": "Roll20 Enhancement Suite",
  "version": "1.0",

  "description": "Bunch of improvements to roll20.",

  "icons": {
      "48": "icon.svg"
  },

  "permissions": [
    "*://app.roll20.net/editor/*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["*://app.roll20.net/editor/*"],
      "js": ["scripts/bootstrap.js"]
    }
  ],

  "background": {
      "scripts": ["scripts/background.js"]
  },

  "browser_action": {
    "default_icon": "icon.svg",
    "default_title": "Roll20 Enhancement Suite",
    "default_popup": "popup/popup.html"
  },

  "applications": {
    "gecko": {
      "id": "{ffed5dfa-f0e1-403d-905d-ac3f698660a7}"
     }
  },

  "web_accessible_resources": [
      "scrips/payload.js",
      "scripts/FileSaver.js",
      "scripts/draw_current_layer.js",
      "scripts/character_io.js",
      "scripts/bulk_initiative.js",
      "scripts/import_export_table.js",
      "scripts/initiative_shortcuts.js"
  ]
}
