{

  "manifest_version": 2,
  "name": "Roll20 Enhancement Suite",
  "version": "1.0",

  "description": "Bunch of improvements to roll20.",

  "icons": {
      "48": "icon.svg"
  },

  "permissions": [
    "*://app.roll20.net/editor/",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["*://app.roll20.net/editor/"],
      "js": ["js/ContentScript.js"]
    }
    
  ],

  "background": {
      "scripts": ["js/Background.js"]
  },

  "applications": {
    "gecko": {
      "id": "{ffed5dfa-f0e1-403d-905d-ac3f698660a7}"
     }
  },

  "web_accessible_resources": [ "css/*", "js/*", "thirdparty/*" ]
}
