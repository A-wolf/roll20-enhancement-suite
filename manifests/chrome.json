{
    "manifest_version": 2,
    "name": "Roll20 Enhancement Suite",
    "version": "1.0",
    "description": "Bunch of improvements to roll20.",
    "icons": {
        "48": "icon.svg"
    },
    "permissions": [
        "*://app.roll20.net/editor/",
        "webRequest",
        "webRequestBlocking",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://app.roll20.net/editor/"
            ],
            "js": [
                "ContentScript.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "Background.js"
        ]
    },
    "web_accessible_resources": [
        "*.js",
        "*.css"
    ]
}
